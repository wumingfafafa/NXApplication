                    android:layout_height="@dimen/margin_50"
                    android:background="@color/white_transparent"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20" >

                    <TextView
                        android:id="@+id/my_tv_other"
                        style="@style/my_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="其他故障"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/my_tv_othertext"
                        style="@style/my_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/my_tv_other"
                        android:layout_marginLeft="@dimen/margin_40"
                        android:gravity="center_vertical"
                        android:text="无"
                        android:textColor="@color/gray_text" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_divider_line_lsize"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:background="@color/gray_text" />

                <RelativeLayout
                    android:id="@+id/my_invite_notelay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@color/white_transparent"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20" >

                    <TextView
                        android:id="@+id/my_tv_note"
                        style="@style/my_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="备注"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/my_tv_notetext"
                        style="@style/my_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_70"
                        android:layout_toRightOf="@id/my_tv_note"
                        android:gravity="center_vertical"
                        android:text="无"
                        android:textColor="@color/gray_text" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detail_official_timelay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
