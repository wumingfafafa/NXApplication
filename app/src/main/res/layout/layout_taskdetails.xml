                    android:background="@color/white_transparent"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20" >

                    <TextView
                        android:id="@+id/detail_tv_dy1"
                        style="@style/my_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="" />

                    <TextView
                        android:id="@+id/detail_tv_dygz1"
                        style="@style/my_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/detail_tv_dy1"
                        android:layout_marginLeft="@dimen/margin_95"
                        android:gravity="center_vertical"
                        android:text="电源指示灯不亮" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/common_arrow"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detail_gz3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_30"
                    android:background="@color/white_transparent"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20" >

                    <TextView
                        android:id="@+id/detail_tv_xsq"
                        style="@style/my_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="显示器故障" />

                    <TextView
                        android:id="@+id/detail_tv_xsqgz"
                        style="@style/my_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_25"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/detail_tv_xsq"
                        android:text="显示器损坏" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/common_arrow"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detail_gz4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_30"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@color/white_transparent"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20" >


                    <TextView
                        android:id="@+id/detail_tv_xsq1"
                        style="@style/my_text_style"
