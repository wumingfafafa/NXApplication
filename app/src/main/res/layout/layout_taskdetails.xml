                    android:background="@color/gray_text"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/detail_team_content1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:background="@color/white_transparent"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_20" >


                    <TextView
                        android:id="@+id/detail_tv_add"
                        style="@style/my_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="地点"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/detail_tv_address"
                        style="@style/my_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/detail_tv_add"
                        android:layout_marginLeft="@dimen/margin_70"
                        android:gravity="center_vertical"
                        android:text="民主路131弄1889号" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/addr" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detail_team_content2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_30"
